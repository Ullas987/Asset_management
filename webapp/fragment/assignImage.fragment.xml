<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
>
    <Dialog
        id="AssignAssetPopup"
        title="Assign Asset"
        resizable="true"
        contentWidth="400px"
    >
        <VBox class="sapUiSmallMargin">
            <Label text="Assign ID" />
            <Input id="AssignID" placeholder="Enter Assign ID" />

            <Label text="Asset ID" />
            <Input id="imgAssetID" placeholder="Enter Asset ID" />
        </VBox>

        <beginButton>
            <Button text="Submit" press="onSubmitAssignAsset" />
        </beginButton>
        <endButton>
            <Button text="Cancel" press="onCancelAssignPopup" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
